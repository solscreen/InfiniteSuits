<h1 class='centered'> Your Shopping Cart </h1><br>
<div class='checkout-table centered'>
	<% subtotal = 0 %>
	
	<table class='checkout-table table'>
		<thead>
			<th></th>
			<th>Item name</th>
			<th>Properties</th>
			<th>Seller</th>
			<th>Delivery type</th>
			<th class="currency">Selling price</th>
			<th></th>
		</thead>
		<tbody>
			
			<% @cart_items.each do |item| %>
				<tr>
					<td>
						<div class style="width: 100px;">
							<img src='<%= item.primary_photo.image_url %>' alt="photo-image" width="100" height="100">
						</div>
					</td>
					<td> <%= item.brand %></td>
					<td>Size: <%= item.size %>/<%= item.item_condition %></td>
					<td> <%= item.seller.name %> </td>
					<td> <%= item.delivery_type %> </td>
					<td> $ <%=item.current_price %>0 </td>
					<td> <%= link_to "X", cart_url(:cart  => {:item_id => item.id }), method: 'delete' %> </td>
				</tr>
					
				<% subtotal += item.current_price %>

			<% end %>
			
			<tr class="total-break">
				<td></td>
				<td colspan="4"> <b>Sub-total</b></td>
				<td class="currency">
					<strong class="price-gold">$<%= subtotal %>0</strong>
				</td>
				
			
			</tr>
			<tr class="shipping-break">
				<td></td>
				<td colspan="4"> <b>Shipping</b></td>
				<td class="currency">
					<strong class="price-shipping">$<%= @cart_items.length * 3 %>.00</strong>
				</td>
				
			
			</tr>
			<tr class="shipping-break">
				<td></td>
				<td colspan="4"> <b>Total</b></td>
				<td class="currency">
					<strong class="price-total">$<%= @cart_items.length * 3 + subtotal %>0 </strong>
				</td>
				
			
			</tr>
			
			
		</tbody>

	</table>
</div>
